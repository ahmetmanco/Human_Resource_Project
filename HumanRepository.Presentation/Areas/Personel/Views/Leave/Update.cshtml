@model UpdateLeaveDTO

<form asp-action="update" asp-controller="leave">
    <div class="row d-flex justify-content-center mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="StatuId" />
        <input type="hidden" asp-for="CreatedDate" />
        <div class="col-lg-10">
            <h1>Update Leave</h1>

            <div class="form-group">
                <label asp-for="StartDate" class="form-label">Leave Start Date</label>
                <input asp-for="StartDate" class="form-control" type="date" max="@DateTime.Now.AddYears(1).ToString("yyyy-MM-dd")" min="@DateTime.Now.AddYears(-1).ToString("yyyy-MM-dd")">
                <span class="text-danger" asp-validation-for="StartDate"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="form-label">Leave End Date</label>
                <input asp-for="EndDate" class="form-control" type="date" max="@DateTime.Now.AddYears(1).ToString("yyyy-MM-dd")" min="@DateTime.Now.AddYears(-1).ToString("yyyy-MM-dd")">
                <span class="text-danger" asp-validation-for="EndDate"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReturnDate" class="form-label">Return Date</label>
                <input asp-for="ReturnDate" class="form-control" type="date" max="@DateTime.Now.AddYears(1).ToString("yyyy-MM-dd")" min="@DateTime.Now.AddYears(-1).ToString("yyyy-MM-dd")">
                <span class="text-danger" asp-validation-for="ReturnDate"></span>
            </div>

            <div class="form-group">
                <label asp-for="LeavePeriod" class="form-label">Leave Period</label>
                <input asp-for="LeavePeriod" class="form-control" type="number" step="0.5">
                <span class="text-danger" asp-validation-for="LeavePeriod"></span>
            </div>

            <div class="form-group">
                <label asp-for="LeaveTypeId" class="form-label">@Html.DisplayNameFor(x=>x.LeaveTypeId)</label>
                <select asp-for="LeaveTypeId" class="custom-select" asp-items="@ViewBag.LeaveTypes">
                    <option>Please select a Leave Type</option>
                </select>
                <span class="text-danger" asp-validation-for="LeaveTypeId"></span>
            </div>

        </div>
    </div>

    <div class="form-group d-flex justify-content-end mt-3">
        <button type="submit" id="updateModel" class="btn btn-primary" hidden></button>
        <button type="button" class="btn btn-primary m-2" data-bs-toggle="modal" data-bs-target="#updateLeaveModal">Update Leave</button>
        <a class="btn btn-danger m-2" asp-area="personel" asp-action="index" asp-controller="personel">Back To The Home</a>
        <a class="btn btn-danger m-2" asp-area="personel" asp-action="leaves" asp-controller="personel">Back To The List</a>
        <div class="col-lg-1"></div>
    </div>
</form>


<div class="modal fade" id="updateLeaveModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-m">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Are You Sure?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure updating leave request?</p>
            </div>
            <div class="modal-footer">
                <button id="update" class="btn btn-primary m-2" type="submit" data-bs-dismiss="modal">Update</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Back To Update Page</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(function () {

            $('#update').click(function () {

                $('#updateModel').trigger('click');
            })
        });


    </script>


}